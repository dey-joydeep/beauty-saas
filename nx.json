{
    "npmScope": "cthub-bsaas",
    "plugins": [
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            }
        },
        {
            "plugin": "@nx/jest/plugin",
            "options": {
                "targetName": "jest:test"
            }
        }
    ],
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["production", "^production"],
            "cache": true
        },
        "test": {
            "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.cjs"],
            "cache": true
        },
        "lint": {
            "inputs": ["default", "{workspaceRoot}/eslint.config.js", "{workspaceRoot}/eslint.base.js"],
            "cache": true
        },
        "@nx/jest:jest": {
            "cache": true,
            "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.cjs"],
            "options": {
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "@nx/angular:application": {
            "options": {
                "buildLibsFromSource": true
            }
        },
        "@nx/angular:dev-server": {
            "options": {
                "buildLibsFromSource": true
            }
        },
        "@nx/eslint:lint": {
            "cache": true,
            "inputs": ["default", "{workspaceRoot}/eslint.config.js", "{workspaceRoot}/eslint.base.js", "{workspaceRoot}/.eslintrc.json"]
        },
        "e2e": {
            "cache": true
        },
        "@nx/angular:ng-packagr-lite": {
            "cache": true,
            "dependsOn": ["^build"],
            "inputs": ["production", "^production"]
        }
    },
    "namedInputs": {
        "default": ["{projectRoot}/**/*", "sharedGlobals"],
        "sharedGlobals": [],
        "production": [
            "default",
            "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
            "!{projectRoot}/tsconfig.spec.json",
            "!{projectRoot}/jest.config.[jt]s",
            "!{projectRoot}/src/test-setup.[jt]s",
            "!{projectRoot}/test-setup.[jt]s",
            "!{projectRoot}/eslint.config.mjs"
        ]
    },
    "tags": {
        "rules": {
            "scope:core": {
                "description": "Core application functionality and shared services"
            },
            "scope:shared": {
                "description": "Shared libraries and utilities used across the application"
            },
            "type:api": {
                "description": "API endpoints and controllers"
            },
            "type:util": {
                "description": "Utility functions and helpers"
            },
            "layer:domain": {
                "description": "Business logic and domain models"
            },
            "layer:data": {
                "description": "Data access and services"
            }
        }
    },
    "workspaceLayout": {
        "appsDir": "apps",
        "libsDir": "libs"
    },
    "pluginsConfig": {
        "@nx/js": {
            "analyzeSourceFiles": true,
            "analyzePackageJson": true,
            "exclude": ["docs/**"]
        }
    },
    "nxCloudId": "688d916733e08f6745766d01",
    "$schema": "./node_modules/nx/schemas/workspace-schema.json",
    "generators": {
        "@nx/angular:library": {
            "linter": "eslint",
            "unitTestRunner": "jest"
        },
        "@nx/angular:component": {
            "style": "scss"
        }
    },
    "defaultBase": "main"
}
