{
    "name": "web-admin",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "src",
    "tags": ["scope:web", "type:app"],
    "targets": {
        "build": {
            "executor": "@nx/angular:application",
            "outputs": ["{options.outputPath.base}"],
            "options": {
                "outputPath": {
                    "base": "dist/apps/admin"
                },
                "index": "src/index.html",
                "polyfills": ["src/polyfills.ts"],
                "tsConfig": "tsconfig.app.json",
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "src/assets",
                        "output": "/assets/"
                    },
                    {
                        "glob": "favicon.ico",
                        "input": "src",
                        "output": "/"
                    }
                ],
                "styles": ["libs/web/config/src/styles/styles.css", "apps/web/admin/src/styles.scss"],
                "scripts": [],
                "browser": "src/main.ts"
            },
            "configurations": {
                "production": {
                    "optimization": true,
                    "extractLicenses": true,
                    "fileReplacements": [
                        {
                            "replace": "src/environments/environment.ts",
                            "with": "src/environments/environment.prod.ts"
                        }
                    ]
                },
                "development": {
                    "optimization": false,
                    "sourceMap": true,
                    "extractLicenses": false
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "executor": "@nx/angular:dev-server",
            "options": {
                "buildTarget": "web-admin:build:development",
                "port": 4200,
                "host": "localhost"
            },
            "configurations": {
                "production": {
                    "buildTarget": "web-admin:build:production"
                },
                "development": {
                    "buildTarget": "web-admin:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "jest.config.ts",
                "passWithNoTests": true
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "lintFilePatterns": ["{projectRoot}/src/**/*.ts", "{projectRoot}/src/**/*.html"]
            }
        }
    }
}
