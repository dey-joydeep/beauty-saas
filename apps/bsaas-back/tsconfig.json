{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../dist/libs/shared/*"],
      "@backend-shared/*": ["../../libs/backend/src/*"],
      "@backend/*": ["src/*"]
    },
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types",
      "./src/types"
    ],
    "types": ["node", "express", "jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.spec.ts"],
  "exclude": ["node_modules", "dist"]
}
