{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "apps/api",
    "paths": {
      "@app/*": ["src/*"],
      "@shared/*": ["../../libs/shared/src/*"]
    },
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types",
      "./src/types"
    ],
    "types": ["node", "express", "jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.spec.ts"],
  "exclude": ["node_modules", "dist"]
}
