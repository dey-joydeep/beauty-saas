{
  "name": "bsaas-front",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "bsaas-front/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/bsaas-front"],
      "options": {
        "command": "npm run build --prefix bsaas-front",
        "cwd": "."
      },
      "configurations": {
        "production": {
          "command": "npm run build --prefix bsaas-front -- --configuration=production"
        },
        "development": {
          "command": "npm run build --prefix bsaas-front -- --configuration=development"
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "bsaas-front:build:production"
        },
        "development": {
          "browserTarget": "bsaas-front:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "bsaas-front/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "bsaas-front/**/*.ts",
          "bsaas-front/**/*.html"
        ]
      }
    }
  },
  "tags": ["type:app", "scope:frontend"]
}
