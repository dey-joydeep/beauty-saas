{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "dom"
    ],
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "apps/api/src/*"
      ],
      "@beauty-saas/core": [
        "libs/core/src/index.ts"
      ],
      "@beauty-saas/core/*": [
        "libs/core/src/*"
      ],
      "@beauty-saas/data-access": [
        "libs/data-access/src/index.ts"
      ],
      "@beauty-saas/data-access/*": [
        "libs/data-access/src/*"
      ],
      "@beauty-saas/shared": [
        "libs/shared/src/index.ts"
      ],
      "@beauty-saas/shared/*": [
        "libs/shared/src/*"
      ],
      "@beauty-saas/ui": [
        "libs/ui/src/index.ts"
      ],
      "@beauty-saas/ui/*": [
        "libs/ui/src/*"
      ],
      "@beauty-saas/web-admin/auth": [
        "libs/web/admin/auth/src/index.ts"
      ],
      "@beauty-saas/web-config": [
        "libs/web/config/src/index.ts"
      ],
      "@beauty-saas/web-core/auth": [
        "libs/web/core/auth/src/index.ts"
      ],
      "@beauty-saas/web-core/http": [
        "libs/web/core/http/src/index.ts"
      ],
      "@beauty-saas/web-core/testing": [
        "libs/web/core/testing/src/index.ts"
      ],
      "@beauty-saas/web-customer/auth": [
        "libs/web/customer/auth/src/index.ts"
      ],
      "@beauty-saas/web-partner/auth": [
        "libs/web/partner/auth/src/index.ts"
      ]
    },
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}