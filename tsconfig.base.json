{
    "compileOnSave": false,
    "compilerOptions": {
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ES2022",
        "baseUrl": ".",
        "useDefineForClassFields": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "module": "ES2022",
        "lib": ["ES2022", "dom"],
        "esModuleInterop": true,
        "allowJs": false,
        "moduleDetection": "force",
        "strict": true,
        "moduleResolution": "node",
        "paths": {
            "@app/*": ["apps/api/src/*"],

            "@beauty-saas/shared": ["libs/shared/src/index.ts", "dist/libs/shared/index.d.ts"],
            "@beauty-saas/shared/*": ["libs/shared/src/*", "dist/libs/shared/*"],
            "@beauty-saas/server-core": ["libs/server/core/src/index.ts", "dist/libs/server/core/index.d.ts"],
            "@beauty-saas/server-core/*": ["libs/server/core/src/*", "dist/libs/server/core/*"],
            "@beauty-saas/server-data-access": ["libs/server/data-access/src/index.ts", "dist/libs/server/data-access/index.d.ts"],
            "@beauty-saas/server-data-access/*": ["libs/server/data-access/src/*", "dist/libs/server/data-access/*"],

            "@beauty-saas/web-admin-auth": ["libs/web/admin/auth/src/index.ts", "dist/libs/web/admin/auth/index.d.ts"],
            "@beauty-saas/web-admin-auth/*": ["libs/web/admin/auth/src/*", "dist/libs/web/admin/auth/*"],
            "@beauty-saas/web-config": ["libs/web/config/src/index.ts", "dist/libs/web/config/index.d.ts"],
            "@beauty-saas/web-config/*": ["libs/web/config/src/*"],
            "@beauty-saas/web-core-auth": ["libs/web/core/auth/src/index.ts", "dist/libs/web/core/auth/index.d.ts"],
            "@beauty-saas/web-core-auth/*": ["libs/web/core/auth/src/*", "dist/libs/web/core/auth/*"],
            "@beauty-saas/web-core-http": ["libs/web/core/http/src/index.ts", "dist/libs/web/core/http/index.d.ts"],
            "@beauty-saas/web-core-http/*": ["libs/web/core/http/src/*"],
            "@beauty-saas/web-core-testing": ["libs/web/core/testing/src/index.ts"],
            "@beauty-saas/web-core-testing/*": ["libs/web/core/testing/src/*"],
            "@beauty-saas/web-customer-auth": ["libs/web/customer/auth/src/index.ts", "dist/libs/web/customer/auth/index.d.ts"],
            "@beauty-saas/web-customer-auth/*": ["libs/web/customer/auth/src/*", "dist/libs/web/customer/auth/*"],
            "@beauty-saas/web-partner-auth": ["libs/web/partner/auth/src/index.ts", "dist/libs/web/partner/auth/index.d.ts"],
            "@beauty-saas/web-partner-auth/*": ["libs/web/partner/auth/src/*", "dist/libs/web/partner/auth/*"],
            "@beauty-saas/web-ui": ["libs/web/ui/src/index.ts", "dist/libs/web/ui/index.d.ts"],
            "@beauty-saas/web-ui/*": ["libs/web/ui/src/*", "dist/libs/web/ui/*"]
        },
        "types": ["node", "jest"],
        "experimentalDecorators": true,
        "sourceMap": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "declarationMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "dist"],
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false,
        "strictInjectionParameters": true,
        "strictInputAccessModifiers": true,
        "strictTemplates": true
    }
}
