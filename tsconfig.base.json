{
    "compileOnSave": false,
    "compilerOptions": {
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ES2022",
        "baseUrl": ".",
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "module": "ES2022",
        "lib": ["ES2022", "dom"],
        "esModuleInterop": true,
        "allowJs": false,
        "moduleDetection": "force",
        "strict": true,
        "moduleResolution": "node",
        "paths": {
            "@app/*": ["apps/api/src/*"],
            "@cthub-bsaas/server-core": ["libs/server/core/src/index.ts"],
            "@cthub-bsaas/server-core/*": ["dist/libs/server/core/*", "libs/server/core/src/*"],
            "@cthub-bsaas/server-contracts-auth": ["libs/server/contracts-auth/src/index.ts"],
            "@cthub-bsaas/server-contracts-auth/*": ["dist/libs/server/contracts-auth/*", "libs/server/contracts-auth/src/*"],
            "@cthub-bsaas/server-data-access": ["libs/server/data-access/src/index.ts"],
            "@cthub-bsaas/server-data-access/*": ["dist/libs/server/data-access/*", "libs/server/data-access/src/*"],
            "@cthub-bsaas/server-features-auth": ["libs/server/features/auth/src/index.ts"],
            "@cthub-bsaas/server-features-auth/*": ["dist/libs/server/features/auth/*", "libs/server/features/auth/src/*"],
            "@cthub-bsaas/server-infrastructure": ["libs/server/infrastructure/src/index.ts"],
            "@cthub-bsaas/server-infrastructure/*": ["dist/libs/server/infrastructure/*", "libs/server/infrastructure/src/*"],
            "@cthub-bsaas/shared": ["libs/shared/src/index.ts"],
            "@cthub-bsaas/shared/*": ["libs/shared/src/*", "dist/libs/shared/*"],
            "@cthub-bsaas/web-admin-auth": ["libs/web/admin/auth/src/index.ts"],
            "@cthub-bsaas/web-admin-auth/*": ["libs/web/admin/auth/src/*", "dist/libs/web/admin/auth/*"],
            "@cthub-bsaas/web-config": ["libs/web/config/src/index.ts"],
            "@cthub-bsaas/web-config/*": ["libs/web/config/src/*"],
            "@cthub-bsaas/web-core-auth": ["libs/web/core/auth/src/index.ts"],
            "@cthub-bsaas/web-core-auth/*": ["libs/web/core/auth/src/*", "dist/libs/web/core/auth/*"],
            "@cthub-bsaas/web-core-http": ["libs/web/core/http/src/index.ts"],
            "@cthub-bsaas/web-core-http/*": ["libs/web/core/http/src/*"],
            "@cthub-bsaas/web-core-testing": ["libs/web/core/testing/src/index.ts"],
            "@cthub-bsaas/web-core-testing/*": ["libs/web/core/testing/src/*"],
            "@cthub-bsaas/web-customer-auth": ["libs/web/customer/auth/src/index.ts"],
            "@cthub-bsaas/web-customer-auth/*": ["libs/web/customer/auth/src/*", "dist/libs/web/customer/auth/*"],
            "@cthub-bsaas/web-partner-auth": ["libs/web/partner/auth/src/index.ts"],
            "@cthub-bsaas/web-partner-auth/*": ["libs/web/partner/auth/src/*", "dist/libs/web/partner/auth/*"],
            "@cthub-bsaas/web-ui": ["libs/web/ui/src/index.ts"],
            "@cthub-bsaas/web-ui/*": ["libs/web/ui/src/*", "dist/libs/web/ui/*"]
        },
        "types": ["node"],
        "experimentalDecorators": true,
        "sourceMap": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "dist"],
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false,
        "strictInjectionParameters": true,
        "strictInputAccessModifiers": true,
        "strictTemplates": true
    }
}
