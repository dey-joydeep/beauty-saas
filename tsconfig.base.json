{
    "compileOnSave": false,
    "compilerOptions": {
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ES2022",
        "baseUrl": ".",
        "isolatedModules": true,
        "useDefineForClassFields": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "module": "ES2022",
        "lib": [
            "ES2022",
            "dom"
        ],
        "esModuleInterop": true,
        "allowJs": false,
        "moduleDetection": "force",
        "strict": true,
        "moduleResolution": "node",
        "paths": {
            "@app/*": [
                "apps/api/src/*"
            ],
            "@beauty-saas/core": [
                "libs/core/src/index.ts"
            ],
            "@beauty-saas/core/*": [
                "libs/core/src/*"
            ],
            "@beauty-saas/data-access": [
                "libs/data-access/src/index.ts"
            ],
            "@beauty-saas/data-access/*": [
                "libs/data-access/src/*"
            ],
            "@beauty-saas/shared": [
                "libs/shared/src/index.ts"
            ],
            "@beauty-saas/shared/*": [
                "libs/shared/src/*"
            ],
            "@beauty-saas/ui": [
                "libs/ui/src/index.ts"
            ],
            "@beauty-saas/ui/*": [
                "libs/ui/src/*"
            ],
            "@beauty-saas/web-admin/auth": [
                "libs/web/admin/auth/src/index.ts"
            ],
            "@beauty-saas/web-config": [
                "libs/web/config/src/index.ts",
                "libs/web/config/dist"
            ],
            "@beauty-saas/web-config/*": [
                "libs/web/config/dist/*",
                "libs/web/config/src/*"
            ],
            "@beauty-saas/web-core/auth": [
                "libs/web/core/auth/src/index.ts"
            ],
            "@beauty-saas/web-core/http": [
                "libs/web/core/http/src/index.ts"
            ],
            "@beauty-saas/web-core/testing": [
                "libs/web/core/testing/src/index.ts"
            ],
            "@beauty-saas/web-customer/auth": [
                "libs/web/customer/auth/src/index.ts"
            ],
            "@beauty-saas/web-partner/auth": [
                "libs/web/partner/auth/src/index.ts"
            ]
        },
        "types": [
            "node",
            "jest"
        ],
        "experimentalDecorators": true,
        "sourceMap": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "declarationMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false,
        "strictInjectionParameters": true,
        "strictInputAccessModifiers": true,
        "strictTemplates": true
    }
}