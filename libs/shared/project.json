{
    "name": "shared",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/shared/src",
    "projectType": "library",
    "tags": ["scope:shared", "type:util", "layer:domain"],
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/libs/shared",
                "main": "libs/shared/src/index.ts",
                "tsConfig": "libs/shared/tsconfig.lib.json",
                "assets": [
                    "libs/shared/*.md"
                ]
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "libs/shared/**/*.ts"
                ]
            }
        },
        "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p libs/shared/tsconfig.lib.json --noEmit"
      }
    },
    "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "jest.preset.ts",
                "passWithNoTests": true
            }
        }
    }
}