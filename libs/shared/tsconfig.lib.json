        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "rootDir": "src",
        "isolatedModules": true,
        "useDefineForClassFields": true,
        "lib": ["ES2022"],
        "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
