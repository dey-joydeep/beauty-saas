{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "module": "es2022",
    "types": ["node"],
    "target": "es2022",
    "declaration": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "test-setup.ts", "jest.config.ts"],
  "include": ["**/*.ts"]
}
