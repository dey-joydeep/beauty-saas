{
  "extends": "../../../tsconfig.server.base.json",
  "compilerOptions": {
    "outDir": "../../../dist/libs/server/core",
    "declaration": true,
    "types": ["node"],
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "composite": true,
    "declarationMap": true,
    "rootDir": "src",
    "tsBuildInfoFile": "../../../dist/libs/server/core/tsconfig.lib.tsbuildinfo",
    "paths": {
      "@beauty-saas/shared": ["dist/libs/shared/index.d.ts"],
      "@beauty-saas/shared/*": ["dist/libs/shared/*"],
      "@beauty-saas/server-data-access": ["dist/libs/server/data-access/index.d.ts"],
      "@beauty-saas/server-data-access/*": ["dist/libs/server/data-access/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "references": [
    {
      "path": "../../shared/tsconfig.lib.json"
    },
    {
      "path": "../data-access/tsconfig.lib.json"
    }
  ]
}
