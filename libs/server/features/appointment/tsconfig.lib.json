{
  "extends": "../../../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "../../../../dist/libs/server/features/appointment",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "composite": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "test-setup.ts",
    "jest.config.ts",
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "references": [
    { "path": "../../core/tsconfig.lib.json" },
    { "path": "../../data-access/tsconfig.lib.json" }
  ]
}
