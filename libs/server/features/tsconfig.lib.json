{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "composite": true,
        "outDir": "../../../dist/libs/server/features",
        "declaration": true,
        "types": ["node"],
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "useDefineForClassFields": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
