{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/libs/frontend",
    "rootDir": "src",
    "composite": true,
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["../../libs/shared/src/*"],
      "@frontend-shared/*": ["libs/frontend/src/app/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "references": [
    {
      "path": "../../libs/shared/tsconfig.json"
    }
  ]
}