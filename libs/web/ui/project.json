{
  "name": "ui",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/web/ui/src",
  "projectType": "library",
  "prefix": "beauty-saas",
  "tags": ["type:lib", "platform:web", "scope:ui"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["libs/web/ui/**/*.ts", "libs/web/ui/**/*.html"]
      }
    },
    "build": {
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "defaultConfiguration": "production",
      "executor": "@nx/angular:package",
      "configurations": {
        "development": {
          "tsConfig": "libs/web/ui/tsconfig.lib.json"
        },
        "production": {
          "tsConfig": "libs/web/ui/tsconfig.lib.prod.json"
        }
      },
      "options": {
        "project": "libs/web/ui/ng-package.json"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p libs/web/ui/tsconfig.lib.json --noEmit"
      }
    },
    "test": {
      "outputs": ["{workspaceRoot}/coverage/libs/web/ui"],
      "executor": "@nx/jest:jest",
      "options": {
        "passWithNoTests": true,
        "jestConfig": "jest.preset.ts"
      }
    }
  }
}
