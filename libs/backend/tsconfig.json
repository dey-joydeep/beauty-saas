{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "rootDir": "src",
    "types": ["node", "jest"],
    "composite": true,
    "paths": {
      "@shared/*": ["../../libs/shared/src/*"],
      "@backend-shared/*": ["src/*"],
      "@backend/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
